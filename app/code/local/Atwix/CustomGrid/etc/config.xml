<?xml version="1.0"?>
<config>
    <modules>
        <Atwix_CustomGrid>
            <version>0.4.0</version>
        </Atwix_CustomGrid>
    </modules>
    <global>
        <models>
            <atwix_customgrid>
                <class>Atwix_CustomGrid_Model</class>
            </atwix_customgrid>
        </models>
    </global>
    <adminhtml>
        <events>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <customgrid_column_append>
                        <type>model</type>
                        <class>Atwix_CustomGrid_Model_Observer</class>
                        <method>appendCustomColumn</method>
                    </customgrid_column_append>
                </observers>
            </core_block_abstract_prepare_layout_before>
        </events>
    </adminhtml>
</config>