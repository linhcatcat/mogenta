<config>
    <modules>
        <Atwix_Cmsattr>
            <version>0.1.0</version>
        </Atwix_Cmsattr>
    </modules>
    <frontend>
        <routers>
            <cmsattr>
                <use>standard</use>
                <args>
                    <module>Atwix_Cmsattr</module>
                    <frontName>cmsattr</frontName>
                </args>
            </cmsattr>
        </routers>
        <layout>
            <updates>
                <cmsattr>
                    <file>cmsattr.xml</file>
                </cmsattr>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <atwix_cmsattr>
                <class>Atwix_Cmsattr_Block</class>
            </atwix_cmsattr>
        </blocks>
        <models>
            <atwix_cmsattr>
                <class>Atwix_Cmsattr_Model</class>
            </atwix_cmsattr>
        </models>
    </global>
</config>